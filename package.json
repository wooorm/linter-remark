{
  "name": "linter-remark",
  "version": "9.0.0",
  "description": "Check markdown with remark",
  "license": "MIT",
  "keywords": [
    "markdown",
    "process",
    "remark",
    "atom",
    "linter"
  ],
  "repository": "git@github.com:wooorm/linter-remark.git",
  "bugs": "https://github.com/wooorm/linter-remark/issues",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "package-deps": [
    "atom-ide-code-format",
    "linter"
  ],
  "dependencies": {
    "atom-languageclient": "^1.0.0",
    "atom-package-deps": "^7.0.0",
    "remark-language-server": "^1.0.0"
  },
  "devDependencies": {
    "atom-tap-test-runner": "^7.0.0",
    "prettier": "^2.0.0",
    "remark-cli": "^9.0.0",
    "remark-preset-wooorm": "^8.0.0",
    "tape": "^5.0.0",
    "xo": "^0.37.0"
  },
  "scripts": {
    "format": "remark . -qfo --ignore-pattern test/ && prettier . -w --loglevel warn && xo --fix",
    "test-api": "atom --test test/index.js",
    "test": "npm run format && npm run test-api"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "unicorn/no-array-callback-reference": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "github",
        {
          "repository": "wooorm/linter-remark"
        }
      ]
    ]
  },
  "atomTestRunner": "atom-tap-test-runner",
  "enhancedScopes": [
    "source.gfm",
    "source.pfm",
    "text.md"
  ],
  "providedServices": {
    "code-format.range": {
      "versions": {
        "0.1.0": "provideCodeFormat"
      }
    }
  },
  "consumedServices": {
    "console": {
      "versions": {
        "0.1.0": "consumeConsole"
      }
    },
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeLinterV2"
      }
    }
  }
}
