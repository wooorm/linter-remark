{
  "name": "linter-remark",
  "version": "2.0.0",
  "description": "Check markdown with remark",
  "license": "MIT",
  "keywords": [
    "markdown",
    "process",
    "remark",
    "atom",
    "linter"
  ],
  "files": [
    "index.js"
  ],
  "repository": "https://github.com/wooorm/linter-remark",
  "bugs": "https://github.com/wooorm/linter-remark/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "atomTestRunner": "atom-tap-test-runner",
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-package-deps": "^4.3.0",
    "remark": "^6.0.0",
    "unified-engine-atom": "^2.0.0"
  },
  "devDependencies": {
    "atom-tap-test-runner": "^1.0.0",
    "remark-cli": "^2.0.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.6.0",
    "xo": "^0.16.0"
  },
  "scripts": {
    "build": "remark *.md --quiet --frail",
    "lint": "xo",
    "test-api": "atom --test test/index.js",
    "test": "npm run build && npm run lint && npm run test-api"
  },
  "xo": {
    "space": true
  },
  "remarkConfig": {
    "output": true,
    "presets": "wooorm"
  }
}
