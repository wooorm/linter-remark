{
  "name": "linter-remark",
  "version": "6.0.0",
  "description": "Check markdown with remark",
  "license": "MIT",
  "keywords": [
    "markdown",
    "process",
    "remark",
    "atom",
    "linter"
  ],
  "repository": "https://github.com/wooorm/linter-remark",
  "bugs": "https://github.com/wooorm/linter-remark/issues",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/wooorm"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "package-deps": [
    "linter"
  ],
  "dependencies": {
    "atom-package-deps": "^5.1.0",
    "remark": "^10.0.0",
    "unified-engine-atom": "^7.0.0"
  },
  "devDependencies": {
    "atom-tap-test-runner": "^6.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "xo": "^0.25.0"
  },
  "scripts": {
    "format": "remark *.md -qfo && prettier --write \"**/*.js\" && xo --fix",
    "test-api": "atom --test test/index.js",
    "test": "npm run format && npm run test-api"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "atomTestRunner": "atom-tap-test-runner",
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "configSchema": {
    "detectConfig": {
      "title": "Config files",
      "description": "Use `.remarkrc` files and `remarkConfig` in `package.json` files.",
      "type": "boolean",
      "default": true
    },
    "detectIgnore": {
      "title": "Ignore files",
      "description": "Use `.remarkignore` files.",
      "type": "boolean",
      "default": true
    },
    "settingGfm": {
      "title": "GFM",
      "type": "boolean",
      "default": true
    },
    "settingCommonmark": {
      "title": "CommonMark",
      "type": "boolean",
      "default": false
    },
    "settingPedantic": {
      "title": "Pedantic",
      "type": "boolean",
      "default": false
    },
    "settingFootnotes": {
      "title": "Footnotes",
      "type": "boolean",
      "default": false
    },
    "scopes": {
      "title": "Scopes",
      "description": "List of scopes for languages which will be checked (run `Editor: Log Cursor Scope` to determine the scopes for a file).",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [
        "source.gfm",
        "source.pfm",
        "text.md"
      ]
    }
  }
}
